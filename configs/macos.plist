<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>Label</key>
        <string>com.user.scheduledshutdownrestart</string>
        <key>ProgramArguments</key>
        <array>
            <string>/usr/local/bin/pwsh</string>
            <string>-File</string>
            <string>/usr/local/bin/ScheduledShutdownRestart.ps1</string>
            <string>-Action</string>
            <string>shutdown</string>
        </array>
        <key>StartCalendarInterval</key>
        <dict>
            <key>Hour</key>
            <integer>22</integer>
            <key>Minute</key>
            <integer>00</integer>
        </dict>
        <key>RunAtLoad</key>
        <false />
        <key>StandardOutPath</key>
        <string>/tmp/scheduledshutdownrestart.out</string>
        <key>StandardErrorPath</key>
        <string>/tmp/scheduledshutdownrestart.err</string>
    </dict>
</plist>